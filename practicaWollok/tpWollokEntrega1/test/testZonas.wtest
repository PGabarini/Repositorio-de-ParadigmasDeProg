import codigo.zonas.lebennin
import codigo.zonas.minasTirith
import codigo.zonas.lossarnach
import codigo.zonas.caminoDeGondor
import codigo.habitantes.gandalf
import codigo.habitantes.tomBombadil
describe "lebennin"{
    test "Gandalf full vida y con sus armas, puede atravesar Lebennin"{

        assert.that(lebennin.puedePasar(gandalf))
    }

    test "Gandalf sin armas y con 11 de vida puede atravesar Lebennin"{
        gandalf.nivelDeVida(11)
        gandalf.armas(#{})

        assert.notThat(lebennin.puedePasar(gandalf))
    }

}

describe "Minas Tirirth"{

    test "Gandalf sin armas y con 11 de vida puede atravesar Minas Tirith"{
        gandalf.nivelDeVida(11)
        gandalf.armas(#{})

        assert.notThat(minasTirith.puedePasar(gandalf))
    }
}

describe "Camino de Gordor"{

    test "Gandalf full vida y con sus armas, puede atravesar el camino 
            compuesto por Lebennin y Minas Tirith"{
            
            caminoDeGondor.zonasDelCamino([lebennin,minasTirith])

            assert.that(caminoDeGondor.puedePasar(gandalf))
    }

    test "Gandalf full vida y con sus armas, atraviesa el camino compuesto por Lebennin y Minas Tirith
        y queda con 90 de vida"{
            caminoDeGondor.zonasDelCamino([lebennin,minasTirith])
            caminoDeGondor.permitirPasar(gandalf)

            assert.equals(90,gandalf.nivelDeVida())

        }
}